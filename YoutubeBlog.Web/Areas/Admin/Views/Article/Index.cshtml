@model List<ArticleDto>
<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Article Management /</span> Articles
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">

        <div class="table-responsive text-nowrap  m-5">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add">
                Add Article <i class="bx bx-plus"></i>
            </a>
            <table class="table table-bordered" id="articlesTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Creation Date</th>
                        <th>Creator</th>
                        <th>Status</th>
                        <th>Procedures</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach(var article in Model)
                    {
                        <tr name="@article.Id">
                            <td>@article.Title</td>
                            <td>@article.Category.Name</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.CreatedBy</td>
                            <td>@(article.IsDeleted ? "Inactive" : "Active")</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-articleId="@article.Id"><i class="bx bx-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bx-minus-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
   





</div>

@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}