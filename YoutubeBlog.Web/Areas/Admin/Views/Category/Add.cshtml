@model CategoryAddDto

<div class="container-xxl flex-grow-1 container-p-y">


    <h5 class="fw-bold  py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi / </span>Makale Ekle
    </h5>

    <div class="row g-4">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header"></h5>
                <form asp-controller="Category" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        
                        
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Kategori ismi</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lüten kategori ismini giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>
